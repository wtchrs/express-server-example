{{#section 'title'}}
  Vacation Photo Contest(with ajax)
{{/section}}

<div id='vacationPhotoContestFormContainer'>
  <form
    role='form'
    enctype='multipart/form-data'
    method='POST'
    id='vacationPhotoContestForm'
  >
    <div class='row gtr-uniform'>
      <input type='hidden' name='_csrf' value='{{csrf}}' />
      <div class='form-group col-6 col-12-xsmall'>
        <input type='text' id='fieldName' name='name' placeholder='Name' />
      </div>
      <div class='form-group col-6 col-12-xsmall'>
        <input
          type='email'
          id='fieldEmail'
          name='email'
          placeholder='Email'
          required
        />
      </div>
      <div class='form-group col-1 col-1-xsmall'>
        <input type='file' accept='image/*' id='fieldPhoto' name='photo' />
      </div>
      <div class='form-group col-11 col-12-xsmall'></div>
      <div class='form-group col-1 col-12-xsmall'>
        <button type='submit'>
          register
        </button>
      </div>
    </div>
  </form>
</div>

{{#section 'script'}}
  <script src='/js/vacation-photo-ajax.js'></script>
{{/section}}